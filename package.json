{
  "name": "wildberries-frontend-ssr",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=12.13.0"
  },
  "browserslist": [
    "last 3 versions",
    "not dead"
  ],
  "dependencies": {
    "@babel/node": "7.8.7",
    "@babel/runtime": "7.9.6",
    "@mihanizm56/fetch-api": "3.5.0-beta.4",
    "@wildberries/i18next-utils": "0.0.16-beta.1",
    "@wildberries/redux-core-modules": "0.3.0-beta.5",
    "body-parser": "1.19.0",
    "classnames": "2.2.5",
    "cookie-universal": "2.1.4",
    "core-js": "3.6.5",
    "cross-env": "7.0.3",
    "dotenv": "^8.2.0",
    "enquirer": "2.3.6",
    "express": "4.17.1",
    "http-proxy-middleware": "1.0.4",
    "listr2": "3.2.3",
    "pretty-error": "2.1.1",
    "promise-sequential": "1.1.1",
    "react": "16.13.1",
    "react-deep-force-update": "2.1.3",
    "react-dom": "16.13.1",
    "react-router5": "8.0.1",
    "react-transition-group": "4.4.1",
    "regenerator-runtime": "0.13.5",
    "router5": "8.0.1",
    "router5-helpers": "8.0.0",
    "router5-plugin-browser": "8.0.1",
    "router5-plugin-logger": "8.0.1",
    "router5-transition-path": "8.0.1",
    "ssr-scripts": "git+https://github.com/mihanizm56/ssr-config.git",
    "typescript": "3.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@types/react-transition-group": "4.2.3",
    "@typescript-eslint/eslint-plugin": "2.7.0",
    "@typescript-eslint/parser": "2.7.0",
    "@types/classnames": "2.2.10",
    "@types/express": "4.17.6",
    "@types/history": "4.7.5",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/webpack-env": "1.16.0",
    "@wildberries/eslint-config": "1.0.7",
    "@wildberries/stylelint-config": "1.0.0",
    "@types/react-redux": "7.1.9",
    "commitizen": "4.0.4",
    "cz-customizable": "6.2.0",
    "husky": "4.2.5"
  },
  "peerDependencies": {
    "react-redux": "7.2.0",
    "redux": "4.0.5",
    "redux-batched-actions": "0.4.1",
    "redux-devtools-extension": "2.13.8",
    "redux-saga": "1.1.1",
    "react-router5": "7.1.0",
    "reselect": "4.0.0",
    "@hapi/joi": "17.1.1",
    "i18next": "19.4.4"
  },
  "scripts": {
    "start:production": "node ./build/server.js",
    "start": "npx cross-env NODE_ENV=development ssr-scripts start",
    "build": "npx cross-env NODE_ENV=production ssr-scripts build",
    "build-analyse": "ssr-scripts build:analyse",
    "build-start": "npm run build && node ./build/server.js",
    "lint": "npx eslint src/ --ext .ts,.js,.tsx --fix && npx stylelint --fix --max-warnings=0 'src/**/*.{modules.scss,scss,css}' && git add .",
    "commit": "git add . && git commit --no-edit"
  },
  "eslintConfig": {
    "extends": [
      "@wildberries"
    ],
    "globals": {
      "__DEV__": true,
      "__SERVER__": false,
      "__CLIENT__": false,
      "location": false,
      "env": false
    },
    "rules": {
      "@typescript-eslint/interface-name-prefix": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "jsx-a11y/html-has-lang": 0
    }
  },
  "stylelint": {
    "extends": "@wildberries/stylelint-config"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/git/commitizen.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g config/git/commitlint.js",
      "pre-commit": "node config/precommit-runner/bin.js",
      "prepare-commit-msg": "node config/git/prepare-commit.js"
    }
  }
}
