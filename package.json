{
  "name": "wildberries-frontend-ssr",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=12.13.0"
  },
  "browserslist": [
    "last 3 versions",
    "not dead"
  ],
  "dependencies": {
    "@babel/node": "7.8.7",
    "@babel/runtime": "7.9.6",
    "body-parser": "1.19.0",
    "classnames": "2.2.5",
    "cookie-universal": "2.1.4",
    "core-js": "3.6.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "http-proxy-middleware": "1.0.4",
    "i18next": "19.4.4",
    "i18next-express-middleware": "2.0.0",
    "i18next-fs-backend": "1.0.3",
    "i18next-http-backend": "1.0.12",
    "pretty-error": "2.1.1",
    "promise-sequential": "1.1.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-i18next": "11.5.0",
    "react-redux": "7.2.0",
    "react-router5": "8.0.1",
    "redux": "4.0.5",
    "redux-devtools-extension": "2.13.8",
    "redux-logger": "3.0.6",
    "redux-optimistic-ui": "3.1.0",
    "redux-thunk": "2.2.0",
    "regenerator-runtime": "0.13.5",
    "reselect": "4.0.0",
    "router5": "8.0.1",
    "router5-helpers": "8.0.0",
    "router5-plugin-browser": "8.0.1",
    "router5-plugin-logger": "8.0.1",
    "router5-transition-path": "8.0.1",
    "ssr-scripts": "git+https://github.com/mihanizm56/ssr-config.git"
  },
  "devDependencies": {
    "@types/classnames": "2.2.10",
    "@types/express": "4.17.6",
    "@types/history": "4.7.5",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/react-redux": "7.1.9",
    "husky": "4.2.5",
    "react-deep-force-update": "2.1.3",
    "@wildberries/eslint-config": "1.0.7",
    "@wildberries/stylelint-config": "1.0.0",
    "@commitlint/cli": "8.2.0",
    "commitizen": "4.0.4",
    "cz-customizable": "6.2.0"
  },
  "scripts": {
    "start": "ssr-scripts start",
    "build": "ssr-scripts build",
    "build-analyse": "npm run build -- --release --analyse",
    "build-start": "npm run build -- --release && node ./build/server.js",
    "lint": "npx eslint src/ --ext .ts,.js,.tsx --fix && npx stylelint --fix --max-warnings=0 'src/**/*.{modules.scss,scss,css}' && git add .",
    "commit": "git add . && git commit --no-edit"
  },
  "eslintConfig": {
    "extends": [
      "@wildberries"
    ],
    "globals": {
      "__DEV__": true,
      "__SERVER__": false,
      "__CLIENT__": false,
      "location": false,
      "env": false
    }
  },
  "stylelint": {
    "extends": "@wildberries/stylelint-config"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "config/git/commitizen.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g config/git/commitlint.js",
      "pre-commit": "npx tsc && npm run build",
      "prepare-commit-msg": "node config/git/prepare-commit.js"
    }
  }
}